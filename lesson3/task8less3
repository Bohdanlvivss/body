function firstUpperLetter(text_to_uppercase) 
 {
     string = text_to_uppercase.split(" ");
 
     for (let i = 0, x = string.length; i < x; i++) {
         string[i] = string[i][0].toUpperCase() + string[i].substr(1);
     }
 
     return string.join(" ");
 }
 
 console.log(firstUpperLetter("i love java script"));
